<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PDFReaderViewerPDFTools" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="AppTheme" parent="@style/Theme.Material3.Light.NoActionBar">
        <item name="android:homeAsUpIndicator">@drawable/baseline_arrow_back_24</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="NoActionBar" parent="@style/AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RightArrow">
        <item name="android:layout_gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:layout_width">@dimen/_12sdp</item>
        <item name="android:layout_height">@dimen/_12sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="android:src">@drawable/ic_right_arrow</item>
    </style>

    <style name="EditextSmall">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/font1</item>
        <item name="android:textColorHint">@color/cancel_text</item>
        <item name="android:background">@null</item>
        <item name="android:paddingTop">@dimen/_12sdp</item>
        <item name="android:paddingBottom">@dimen/_12sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/enterfilename</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="TextViewStyleSub">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/subtextcolor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="toolbaret">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="toolbartheme">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="toolbarthemeSearch">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="toolbarthemesub">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:actionOverflowButtonStyle">@style/customoverflow</item>
    </style>

    <style name="customoverflow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_sorting</item>
    </style>

    <style name="dialogTheme" parent="@style/Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:layout_marginLeft">@dimen/_15sdp</item>
        <item name="android:layout_marginRight">@dimen/_15sdp</item>
    </style>

    <style name="ef_AppTheme" parent="@style/ef_BaseTheme">
        <item name="android:fontFamily">@font/lato</item>
        <item name="colorAccent">@color/ef_colorAccent</item>
        <item name="colorPrimary">@color/ef_colorPrimary</item>
        <item name="colorPrimaryDark">@color/ef_colorPrimaryDark</item>
    </style>

    <style name="ef_BaseTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:fontFamily">@font/lato</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ef_CustomToolbarTheme" parent="@style/Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/ef_colorTextPrimary</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="actionMenuTextColor">@color/ef_colorTextPrimary</item>
    </style>

    <style name="fab_3_rounded">
        <item name="cornerFamily">@null</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="radioButton">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/font2</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:drawablePadding">@dimen/_5sdp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleX">1</item>
        <item name="android:scaleY">1</item>
        <item name="android:drawableStart">@drawable/radio_selector</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="FloatingMenuButton">
        <item name="fab_colorNormal">@color/toolbarcolor</item>
        <item name="fab_colorPressed">@color/toolbarcolor</item>
        <item name="fab_colorRipple">@color/toolbarcolor</item>
    </style>

    <style name="ImagePickerTheme" parent="@style/ef_BaseTheme">
        <item name="colorAccent">@color/toolbarcolor</item>
        <item name="colorPrimary">@color/toolbarcolor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="cardDialog">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="cardCornerRadius">@dimen/_20sdp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="CardViewCommon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/_5sdp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="WhiteCursorSearchView" parent="@style/Widget.AppCompat.SearchView">
        <item name="colorControlActivated">#ffffff</item>
    </style>

    <style name="AppTheme.SearchView" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@color/font1</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_in</item>
        <item name="android:windowExitAnimation">@anim/anim_out</item>
    </style>

    <style name="bottomSheetDialogTheme" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/dialog_bg</item>
    </style>

    <style name="Theme.PDFReaderViewerPDFTools" parent="Base.Theme.PDFReaderViewerPDFTools" />
</resources>